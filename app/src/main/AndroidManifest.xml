<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.api.laresistencia">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <application
        android:name="edu.pes.laresistencia.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <meta-data android:name="edu.pes.laresistencia.Glide.GlideConfiguration"
            android:value="GlideModule"/>

        <activity android:name="edu.pes.laresistencia.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="edu.pes.laresistencia.changepassword.ChangePasswordView"/>
        <activity android:name="edu.pes.laresistencia.language.LanguageView" />
        <activity android:name="edu.pes.laresistencia.register.RegisterView" />
        <activity
            android:name="edu.pes.laresistencia.home.HomeView"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name="edu.pes.laresistencia.login.LoginView" />
        <activity android:name="edu.pes.laresistencia.activity.ActivityView" />
        <activity android:name="edu.pes.laresistencia.chat.ChatView" />
        <activity android:name="edu.pes.laresistencia.config.ConfigView" />
        <activity android:name="edu.pes.laresistencia.otherprofile.OtherProfileView"/>
        <activity android:name="edu.pes.laresistencia.about.AboutView"/>

    </application>

</manifest>