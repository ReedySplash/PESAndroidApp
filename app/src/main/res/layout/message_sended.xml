<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <TextView
        android:id="@+id/xat_messageSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiero mi bocadillo"
        android:textSize="15sp"
        android:background="@drawable/rounded_sender_message"
        android:maxWidth="240dp"
        android:padding="8dp"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/xat_timeSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="17:50"
        android:textSize="12sp"
        android:layout_marginStart="4dp"
        android:layout_toStartOf="@+id/xat_messageSend"
        android:layout_alignBottom="@+id/xat_messageSend"/>

</RelativeLayout>