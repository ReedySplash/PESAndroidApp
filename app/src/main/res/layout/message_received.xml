<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">
    
    <TextView
        android:id="@+id/xat_messageReceived"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiero mi bocadillo"
        android:textSize="15sp"
        android:background="@drawable/rounded_receiver_message"
        android:maxWidth="240dp"
        android:padding="8dp"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:layout_alignParentStart="true"/>
    
    <TextView
        android:id="@+id/xat_timeReceived"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="17:50"
        android:textSize="12sp"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@+id/xat_messageReceived"
        android:layout_alignBottom="@+id/xat_messageReceived"/>

</RelativeLayout>