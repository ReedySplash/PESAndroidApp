<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listchats_card"
        android:layout_margin="1dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <ImageView
                android:id="@+id/listchats_photoAccept"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:focusable="true"
                android:clickable="true"
                android:foreground="@drawable/register_picture_selector"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/listchats_nameAccept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/listchats_photoAccept"
                android:singleLine="true"
                android:maxLength="20"
                android:ellipsize="marquee"
                android:layout_centerVertical="true"
                android:text="Texto de ejemplo"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <android.support.v7.widget.CardView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:foreground="?android:selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/listchats_cancel_button"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:cardBackgroundColor="@color/colorDelete"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/listchats_cancel"
                    android:layout_gravity="center"
                    android:textColor="@color/colorButtons"
                    android:textSize="17sp" />
            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>